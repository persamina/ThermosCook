<div class="container-fluid">
  <div class="errors"></div>
  <div class="warnings"></div>
  <div class="successes"></div>
  <div class="row-fluid">
    <h2>
      <%- article.get("title") %>
      <% if(article.get("user_id") == currentUser.id) { %>
        <a class="edit-article article-title" href="#articles/<%= article.id %>/edit">
          <i class="fa fa-edit"></i>
        </a>
        <a class="delete-article article-title" href="#">
          <i class="fa fa-times"></i>
        </a>
      <% } %>
    </h2>
    <div class="btn-group" id="like">
      <button class="btn btn-primary like-count"><%= article.get("likes") %></button>
      <% if (currentUser.id && currentUser.get('likes').findWhere({article_id: article.id})) { %>
        <a href="#" class="btn btn-primary like-button"><i class="fa fa-heart color-red"></i> Liked</a>
      <% } else { %>
        <a href="#" class="btn btn-primary like-button"><i class="fa fa-heart"></i> Like</a>
      <% } %>
    </div>
    <%= article.get("body") %>
  </div>
</div>
