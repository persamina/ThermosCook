<div class="container-fluid" id="photo_loader">
  <div class="errors"></div>
  <div class="warnings"></div>
  <div class="successes"></div>
  <div class="row-fluid">
    <form accept-charset="UTF-8" action="/users.json" class="new_user" method="post">
      <!-- The fileupload-buttonbar contains buttons to add/delete files and start/cancel the upload -->
      <div class="span2"></div>
      <div class="span8">
        <h2>Sign Up</h2>
        <div class="email control-group">
          <div class="input-prepend">
            <span class="add-on">
              <i class="fa fa-envelope primary-color"></i>
            </span>
            <input type="text" name="user[email]" placeholder="Email">
          </div>
          <span class="help-inline"></span>
        </div>
        <div class="username control-group">
          <div class="input-prepend">
            <span class="add-on">
              <i class="fa fa-user primary-color"></i>
            </span>
            <input type="text" name="user[username]" placeholder="Username">
          </div>
          <span class="help-inline"></span>
        </div>
        <div class="password password_confirmation control-group">
          <div class="input-prepend">
            <span class="add-on">
              <i class="fa fa-lock primary-color"></i>
            </span>
            <input type="password" name="user[password]" placeholder="Password">
          </div>
          <span class="help-inline"></span>
          <div style="margin-bottom: 10px;"></div>
          <div class="input-prepend">
            <span class="add-on">
              <i class="fa fa-lock primary-color"></i>
            </span>
            <input type="password" name="user[password_confirmation]" placeholder="Password Confirmation">
          </div>
        </div>
        <button type="submit" class="btn btn-primary start no-gradient">
          <span>Sign Up!</span>
        </button>
      </div>
      <div class="span2"></div>
    </form>
  </div>
</div>

