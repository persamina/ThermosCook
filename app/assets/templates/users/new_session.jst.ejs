<div class="container-fluid">
  <div class="errors"></div>
  <div class="warnings"></div>
  <div class="successes"></div>
  <div class="row-fluid">
    <div class="span4"></div>
    <div class="span4">
      <h2>Sign In</h2>
      <form accept-charset="UTF-8" class="new_user" id="new_user" enctype="multipart/form-data" method="post">
        <div class="input-prepend">
          <span class="add-on">
            <i class="fa fa-envelope primary-color"></i>
          </span>
          <input type="text" name="user[email]" placeholder="Email">
        </div>

        <div class="input-prepend">
          <span class="add-on">
            <i class="fa fa-lock primary-color"></i>
          </span>
          <input type="password" name="user[password]" placeholder="Password">
        </div>

        <br>
        <button class="btn btn-primary " type="submit" >
          <span>Sign In</span>
          <i class="fa fa-sign-in "></i>
        </button>
      </form>
    </div>
    <div class="span4"></div>
  </div>
</div>
