<a href="/#recipes/<%=recipe.id %>" data-recipe-id="<%=recipe.id %>" >
<div class="tile" 
     id="recipe" 
     data-recipe-id="<%=recipe.id %>" 
     data-placementId="<%=placementId %>">

  <div>
  <% if(recipe.get("recipe_photos").models.length > 0 ) { %>
    <img src="<%- recipe.get("recipe_photos").models[0].get("thumbnail_url") %>" style="height: <%= imgHeight %>px; width: <%= imgWidth %>px;"></img>
  <% } else { %>
    <img src="recipe_placeholder.png" style="height: <%= imgHeight %>px; width: <%= imgWidth %>px;"></img>
  <% } %>
  </div>

  <div class="tile-title">
    <h5><%- recipe.get("name") %></h5>
  </div>
</div>
</a>
